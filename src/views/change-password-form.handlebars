<div>
  <form action="/api/users/change-password" method="POST" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required value="{{email}}" readonly>

    <div class="form-group">
      <label for="newPassword">Nueva Contraseña</label>
      <input type="password" id="newPassword" name="newPassword" required>
    </div>

    <button type="submit" class="btn-submit">Cambiar Contraseña</button>
  </form>
</div>